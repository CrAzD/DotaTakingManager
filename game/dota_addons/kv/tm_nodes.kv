	"ent_dota_tree"
	{
		"ent_dota_tree"
		{
			"category"							node
			"configureOnStartup"				true
			"value"
			{
				"lumber"						1
			}
			"modifier"
			{
				"modifier_has_lumber"			true
			}
		}

	}

	//============================
