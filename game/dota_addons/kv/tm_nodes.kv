	"npc_dota_building"
	{
		"titan_gold_mound"
		{
			"category"							node
			"configureOnStartup"				true
			"value"
			{
				"gold"							5
			}
			"modifier"
			{
				"modifier_has_lumber"			true
			}
		}
	}
}